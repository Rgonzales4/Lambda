BEGIN SoundSensing
  MaxSound = 0
  TempSound = 0 
  DirectionSound =0
  Rotate = 0
  
  MaxSound = read Sound value
  
  WHILE Rotate < 8
    spin right 45
    TempSound = read Sound value
    IF TempSound > MaxSound THEN
      MaxSound = TempSound
      DirectionSound = Rotate * 45
    ENDIF
    increment Rotate 
  ENDWHILE
  Spin right DirectionSound
END SoundSensing
